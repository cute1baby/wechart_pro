/* pages/customVideo.wxss */
@import '/static/css/iconfont.wxss';
@import "/static/css/flex";
.myVideo{
  position: relative;
  width: 100%;
}

.cover{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 11;
}


.progress-title, .process-container{
  position: absolute;
  width: 100%;
  left: 0rpx;
  z-index: 20;
  box-sizing: border-box;
  

}
/** 顶部自定义返回和标题 */
.progress-title{
  background-image: linear-gradient(to top , rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6));
  height: 150rpx;
  top: 0rpx;
  margin: 0 20rpx;
  font-size: 36rpx;
  color: #fff;
  line-height: 150rpx;
}
.progress-title .back{
  padding: 0 20rpx;
}
.progress-title .title{
  margin-left: 20rpx;
}


/** 底部自定义进度条 */
.process-container{
  height: 100rpx;
  bottom: 0rpx;
  background-image: linear-gradient(to bottom , rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6));
}

.video-controls-icon,.fullSet{
  font-size: 46rpx;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
}

.video-controls-icon{
  padding: 0 20rpx;
}

.fullSet{
  padding-right: 20rpx;
}

.slider-container slider{
  margin: 0 5rpx;
  padding: 0 20rpx;
}


.picker{
  padding: 0 20rpx;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #fff;
}

.currentTime, .allTime{
  font-size: 30rpx;
  text-align: center;
  overflow: visible;
  color: #fff;
}